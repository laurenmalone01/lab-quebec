  <form method="POST" action="/updateFruit/<%= fruitData[i]._id %>" style="display: inline-block">  
    <%= fruitData[i].fruit %> (<%= fruitData[i].size %>) 
    <input type="submit" value="update"> 
  </form>
  <br/>
<% } %> 
